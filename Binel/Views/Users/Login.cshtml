@model Binel.ViewModels.LoginViewModel

<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Login Sayfasý</title>
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
<link rel="stylesheet" href="~/css/styles.css">
</head>
<body>
<div class="container d-flex justify-content-between align-items-center min-vh-100">
    <!-- Logo -->
    <div class="logo">
        <img src="~/images/Union.png" alt="Your Logo">
    </div>
    <div>
        <!-- Hoþ Geldiniz Baþlýðý -->
        <div class="welcome-text">
            <h1>Þu an neler dönüyor?<br></h1>
            <h2>Yardýmlaþmanýn yeri</h2>
            <h3>Binel'a Hoþ Geldiniz</h3>
        </div>

        <!-- Giriþ Formu -->
        <div class="mt-3">
            <form asp-action="Login" asp-controller="Users" method="post" id="login-form">
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <div class="input-group">
                        <input asp-for="Password" type="password" class="form-control" />
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                <i class="fas fa-eye"></i><span id="passwordToggleText">Þifreyi göster</span>
                            </button>
                        </div>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-block">Giriþ Yap</button>
                    <button id="forgotPasswordButton" class="btn btn-link mt-2">Þifremi Unuttum</button>
                </div>
                <div> @TempData["Message"]</div>
            </form>
            <h4>Kaydýnýz yok mu? Hemen oluþturalým!</h4>
            <button id="registerButton" class="btn btn-block transparent-button">Kayýt Ol</button>
            <p id="error-message1" class="error-message text-danger"></p>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="https://kit.fontawesome.com/a076d05399.js"></script>
<script src="~/js/site.js"></script>

<script>
  // Form kontrolü
  $(document).ready(function() {
    $('#login-form').submit(function(event) {
      event.preventDefault(); // Formun varsayýlan davranýþýný engelle

      var emailInput = $('#emailLogin');
      var passwordInput = $('#password');

      // Basit bir kontrol: E-posta ve þifre boþ olmamalýdýr
      if (emailInput.val() === '' || passwordInput.val() === '') {
        $('#error-message1').text('Lütfen e-posta ve þifrenizi girin.');
        return;
      }

      // E-posta doðruluðunu kontrol et
      if (!isValidEmail(emailInput.val())) {
        $('#error-message1').text('Geçerli bir e-posta adresi girin.');
        return;
      }

      // Giriþ baþarýlý olduðunda modalý gizle
      $('#loginModal').modal('hide');
    });

    // Giriþ yap butonuna týklandýðýnda modalý göster
    $('#loginButton').click(function() {
      $('#loginModal').modal('show');
    });


        // Toggle password visibility in login modal
        $('#togglePassword').click(function () {
            const passwordInput = $('#password');
            const type = passwordInput.attr('type') === 'password' ? 'text' : 'password';
            passwordInput.attr('type', type);
            $(this).find('i').toggleClass('fa-eye fa-eye-slash');

            // Change button text based on password visibility
            const buttonText = $('#passwordToggleText');
            if (type === 'text') {
                buttonText.text('Þifreyi gizle');
            } else {
                buttonText.text('Þifreyi göster');
            }
        });
          });

  function isValidEmail(email) {
    var emailRegex = /^[a-z0-9._%+-]+@@[a-z0-9.-]+\.[a-z]{2,}$/;
    return emailRegex.test(email);
  }
</script>


</body>
</html>
