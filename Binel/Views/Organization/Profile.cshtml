@model Binel.Models.Organization
@{
    Layout = "_Layout1";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-16">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.OrganizationName</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/profile_styles.css">
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body>
    <div class="container mt-4">
        <div class="organization-header text-left">
            <h1>@Model.OrganizationName</h1>
            <p>@Model.Biography</p>
        </div>

        <h2 class="text-center">Bağış Postları</h2>
        <div class="donate-posts">
            @foreach (var donatePost in Model.DonatePosts)
            {
                <div class="donate-post-card d-flex mb-4">
                    <div class="post-image mr-3">
                        @foreach (var file in donatePost.Files)
                        {
                            <img src="@file.FileUrl1" alt="Media" class="img-thumbnail" />
                        }
                    </div>
                    <div class="post-content">
                        <h3>
                            <a asp-action="DonatePost" asp-controller="Organization" asp-route-id="@donatePost.DonateId" asp-route-organizationTitle="@Model.OrganizationTitle">
                                @donatePost.Title
                            </a>
                        </h3>
                        <p>@donatePost.DonateText</p>
                    </div>
                </div>
            }
        </div>

        <h2 class="text-center">Postlar</h2>
        <div class="posts">
            @foreach (var post in Model.Posts)
            {
                <div class="post-card d-flex mb-4">
                    <div class="post-image mr-3">
                        @foreach (var file in post.Files)
                        {
                            <img src="@file.FileUrl1" alt="Media" class="img-thumbnail" />
                        }
                    </div>
                    <div class="post-content">
                        <h3>
                            <a asp-action="Post" asp-controller="Organization" asp-route-id="@post.PostId" asp-route-organizationTitle="@Model.OrganizationTitle">
                                @post.Title
                            </a>
                        </h3>
                        <p>@post.PostText</p>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>
