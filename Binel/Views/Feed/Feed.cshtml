@model List<Binel.Models.DonatePost>

<h1>Feed</h1>

<form method="get" action="/feed/search">
    <input type="text" name="keyword" placeholder="Arama yap...">
    <button type="submit">Ara</button>
</form>

@if (Model != null && Model.Any())
{
    <ul>
        @foreach (var post in Model)
        {
            <li>
                <!-- Title'e tıklandığında donate sayfasına gitmek için bağlantı -->
                <a href="/@post.Organization.OrganizationTitle.ToLower()/donatepost?id=@post.DonateId">@post.Title</a>
                <p>@post.DonateText</p>
                <p>Tarih: @(post.PublishDate.HasValue ? post.PublishDate.Value.ToString("dd/MM/yyyy") : "Tarih bilinmiyor")</p>

                <!-- Organizasyon adına tıklandığında organizasyon sayfasına gitmek için bağlantı -->
                @if (post.Organization != null)
                {
                    <p>Organizasyon: <a href="/@post.Organization.OrganizationTitle.ToLower()">@post.Organization.OrganizationName</a></p>
                }

                <p>
                    Kategoriler:
                    @foreach (var category in post.Categories)
                    {
                        <span>@category.CategoryName</span>
                    }
                </p>
            </li>
        }
    </ul>

    @if (ViewBag.TotalPages > 1)
    {
        <div>
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <a href="/feed/search?keyword=@ViewBag.Keyword&pageNum=@i">@i</a>
            }
        </div>
    }
}
else
{
    <p>Sonuç bulunamadı.</p>
}
